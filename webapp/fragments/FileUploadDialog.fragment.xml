<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:u="sap.ui.unified">
	<Dialog contentWidth="40%" showHeader="false">
		<content>
			<HBox justifyContent="Center" width="100%" height="100%">
				<VBox width="40%" justifyContent="Center">
					<Title text="Drag and drop file / Browse: " level="H1"/>
					<u:FileUploader fileType="csv" uploadComplete="handleUploadComplete" change="handleValueChange" sendXHR="true"/>
				</VBox>
				<VBox width="40%" justifyContent="SpaceAround">
					<items>
						<Title text="Types of files supported" level="H1" class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom"/>
						<HBox justifyContent="SpaceBetween" class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
							<HBox>
								<core:Icon src="sap-icon://excel-attachment"/>
								<Text class="sapUiSmallMarginBegin" text="sample.csv"/>
							</HBox>
							<core:Icon src="sap-icon://accept"/>
						</HBox>
						<HBox justifyContent="SpaceBetween" class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
							<HBox>
								<core:Icon src="sap-icon://excel-attachment"/>
								<Text class="sapUiSmallMarginBegin" text="sample.xls"/>
							</HBox>
							<core:Icon src="sap-icon://decline"/>
						</HBox>
						<HBox justifyContent="SpaceBetween" class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
							<HBox>
								<core:Icon src="sap-icon://pdf-attachment"/>
								<Text class="sapUiSmallMarginBegin" text="sample.pdf"/>
							</HBox>
							<core:Icon src="sap-icon://decline"/>
						</HBox>
						<HBox justifyContent="SpaceBetween" class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
							<HBox>
								<core:Icon src="sap-icon://background"/>
								<Text class="sapUiSmallMarginBegin" text="sample.img"/>
							</HBox>
							<core:Icon src="sap-icon://decline"/>
						</HBox>
						<HBox justifyContent="SpaceBetween" class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
							<HBox>
								<core:Icon src="sap-icon://document"/>
								<Text class="sapUiSmallMarginBegin" text="sample.doc"/>
							</HBox>
							<core:Icon src="sap-icon://decline"/>
						</HBox>
						<HBox justifyContent="SpaceBetween" class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom">
							<HBox>
								<core:Icon src="sap-icon://document"/>
								<Text class="sapUiSmallMarginBegin" text="sample.docx"/>
							</HBox>
							<core:Icon src="sap-icon://decline"/>
						</HBox>
					</items>
				</VBox>
			</HBox>
		</content>
		<buttons>
			<Button text="OK" type="Accept" press="onPressOKDilog"/>
			<Button text="Close" press="onPressCloseDilog" type="Reject"/>
		</buttons>
	</Dialog>
</core:FragmentDefinition>